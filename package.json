{
  "name": "nanosplash",
  "description": "The tiny loading screen for web artisans",
  "private": false,
  "version": "3.0.1",
  "type": "module",
  "author": {
    "name": "Isak K. Hauge",
    "email": "isakhauge@icloud.com",
    "url": "https://no.linkedin.com/in/isakhauge"
  },
  "keywords": [
    "loading",
    "loader",
    "screen",
    "splash",
    "nano",
    "nanosplash",
    "small",
    "tiny",
    "es",
    "esm",
    "ts",
    "typescript",
    "iife",
    "cdn",
    "vite"
  ],
  "homepage": "https://isakhauge.github.io/nanosplash",
  "repository": {
    "type": "git",
    "url": "https://github.com/isakhauge/nanosplash.git"
  },
  "license": "MIT",
  "main": "./dist/es/ns.js",
  "module": "./dist/es/ns.js",
  "source": "./src/main.ts",
  "unpkg": "./dist/iife/ns.iife.js",
  "style": "./dist/es/style.css",
  "exports": {
    ".": {
      "types": {
        "require": "./src/vite-env.d.ts",
        "default": "./src/vite-env.d.ts"
      },
      "browser": {
        "require": "./dist/cjs/ns.cjs",
        "default": "./dist/es/ns.js"
      },
      "default": {
        "require": "./dist/cjs/ns.cjs",
        "default": "./dist/es/ns.js"
      }
    }
  },
  "types": "./src/vite-env.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build -m production --c vite.es.config.ts",
    "build:cjs": "tsc && vite build -m production --c vite.cjs.config.ts",
    "build:iife": "tsc && vite build -m production --c vite.iife.config.ts",
    "build:demo": "tsc && vite build -m production --c vite.demo.config.ts",
    "build:all": "yarn build && yarn build:cjs && yarn build:iife && yarn build:demo",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.1",
    "@vitest/coverage-v8": "^0.32.0",
    "@vitest/ui": "^0.32.0",
    "jsdom": "^22.1.0",
    "sass": "^1.63.2",
    "terser": "^5.17.7",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vitest": "^0.32.0"
  }
}
